{% extends 'base.html.j2' %}

{% block header %}
  <h1>{% block title %}Edit "{{ room['description'] }}"{% endblock %}</h1>
{% endblock %}

{% block content %}
<form method="post">
  <label for="description">Description:</label>
  <input name="description" autofocus="autofocus" id="description"
    value="{{ request.form['description'] or room['description'] }}" required>
  <input type="submit" value="Save">
  <input class="danger" type="submit" value="Delete" onclick="return confirm('Are you sure?');">
</form>
{% endblock %}
