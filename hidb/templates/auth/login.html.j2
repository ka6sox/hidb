{% extends 'base.html.j2' %}

{% block header %}
  <h1>{% block title %}Log In{% endblock %}</h1>
{% endblock %}

{% block content %}
  <form method="post">
  <table class="table table-borderless table-dark">
    <tr>
    <td><label for="username">Username:</label></td>
    <td><input name="username" autocapitalize="none" autofocus="autofocus" id="username" required></td>
    </tr>
    <tr>
    <td><label for="password">Password:</label></td>
    <td><input type="password" autocapitalize="none" name="password" id="password" required></td>
    </tr>
  </table>
    <input type="submit" value="Log In">
  </form><br />
  <p>No account? <A HREF="{{ url_for('auth.register') }}">Register for an account here</A>.</p>
{% endblock %}
