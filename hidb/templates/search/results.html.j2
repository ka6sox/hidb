{% extends 'base.html.j2' %}

{% block header %}
  <h1>{% block title %}Search Results{% endblock %}</h1>
{% endblock %}

{% block content %}
<p>Found {{ results|length }} results.</p>

<table class="table w-auto table-borderless table-dark table-sm">
  <tbody>
    {% for r in results %}
    <tr>
    <td><img src="/static/photos/{{ r['photo'] }}" class="img-thumbnail img-fluid" style="max-height: 50px; max-width: 50px;"></td>
    <td class="text-left"><A HREF="{{ url_for('items.details', id=r['id']) }}">{{ r['model_no'] }}</A></td>
    </tr>
    {% endfor %}
  </tbody>
</table>

<p><a class="action" href="{{ url_for('search.index') }}">Search Again</a></p>

{% endblock %}
