{% extends 'base.html.j2' %}

{% block header %}
  <h1>{% block title %}Items{% endblock %}</h1>
  {% if g.user %}
    <a href="{{ url_for('items.create') }}">New</a>
  {% endif %}
{% endblock %}

{% block content %}
  {% for item in items %}
          <h3>
            <A HREF="{{ url_for('items.details', id=item['id']) }}">
              {{ item['model_no'] }} ({{ item['qty'] }} owned)
            </A>
          </h3>
        {% if g.user %} <!-- ['id'] == post['author_id'] -->
        <a href="{{ url_for('items.update', id=item['id']) }}">Edit</a>
        {% endif %}
    {% if not loop.last %}
      <hr>
    {% endif %}
  {% endfor %}
{% endblock %}
